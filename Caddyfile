cubro-sites.ru, www.cubro-sites.ru {
  encode gzip

  # API — префикс /api НЕ срезаем
  handle /api/* {
    reverse_proxy api:8080
  }

  # кэш для статических ассетов Next (необязательно)
  @nextstatic path /_next/static/*
  header @nextstatic Cache-Control "public, max-age=31536000, immutable"

  # всё остальное — в Next
  reverse_proxy * next:3000
}